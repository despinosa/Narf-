<Page x:Class="Narf.View.PlaybackPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Narf"
      xmlns:emgu="clr-namespace:Emgu.CV.UI;assembly=Emgu.CV.UI"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="620"
      Title="Narf! - Home">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="310"/>
      <ColumnDefinition Width="310"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="340"/>
      <RowDefinition Height="180"/>
    </Grid.RowDefinitions>
    <WindowsFormsHost Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
      <emgu:ImageBox x:Name="videoDisplay" SizeMode="AutoSize" LoadCompleted="videoDisplay_LoadCompleted"/>
    </WindowsFormsHost>
    <!-- <Image x:Name="videoDisplay" HorizontalAlignment="Left" Height="240" VerticalAlignment="Top" Width="320"/> -->
  </Grid>
</Page>
